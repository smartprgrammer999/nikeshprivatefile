void ho_sortname()
{
struct ho_record store[50],temp;
int j,k,p=0,one,n;
int i=5;
clrscr();
fp=fopen("holder.txt","rb");
gotoxy(1,3);
cprintf("HO-NAME");
gotoxy(15,3);
cprintf("HO-FR.NAME");
gotoxy(30,3);
cprintf("HO-ADDRESS");
gotoxy(45,3);
cprintf("HO-ADDHAR");
gotoxy(58,3);
cprintf("HO-phone.no");
gotoxy(70,3);

cprintf("HO-date");
printf("\n------------------------------------------------------------------------------\n");
fp=fopen("holder.txt","rb");
while(fread(&s,sizeof(s),1,fp)==1)
store[p++]=s;
for(j=0;j<p-1;j++)
{
for(k=j+1;k<p;k++)
{
if(strcmpi(store[j].ho_name,store[k].ho_name)>0)
{
temp=store[j];
store[j]=store[k];
store[k]=temp;
}
}
}
for(j=0;j<p;j++)
{
gotoxy(1,i);
printf("%s",store[j].ho_name);
gotoxy(15,i);
printf("%s",store[j].ho_frname);
gotoxy(30,i);
printf("%s",store[j].ho_address);
gotoxy(45,i);
printf("%s",store[j].ho_addhar);
gotoxy(58,i);
printf("%s",store[j].ho_phone);
gotoxy(70,i);
printf("%s",store[j].ho_date);
i++;
}
printf("\n--------------------------------------------------------------------------------\n");
printf("\n");

fclose(fp);
}

void singhup()
{
int i;
clrscr();
//textbackground(BLUE);
