cprintf("%s",__DATE__);
textcolor(RED);
textbackground(WHITE);
gotoxy(67,3);
cprintf("%s",__TIME__);

textbackground(CYAN);
for(i=0;i<9;i++)
{
p=10;
gotoxy(30,p+i);
textcolor(BLACK);
cprintf("\n%s",menu[i]);
}
i=9;
do
{
if(i==9)
{
i--;
textbackground(BLUE);
textcolor(RED);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
}
key=getch();
if(key==72&&i>=1)
{
textbackground(CYAN);
textcolor(WHITE);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
i--;
textbackground(BLUE);
textcolor(RED);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
}
if(key==80&&i<=7)
{
textbackground(CYAN);
textcolor(BLACK);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
i++;
textbackground(WHITE);
textcolor(BLACK);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
}
if(key==13&&i==8)
{
