void ho_modify()
{
clrscr();
int p,i,key=9;
textbackground(CYAN);
textcolor(5);
char menu[7][31]={
		 {"MODIFICATION ON NAME          "},
		 {"MODIFICATION ON ADDRESS       "},
		 {"MODIFICATION ON FATHER'S NAME "},
		 {"MODIFICATION ON MOBILE-NO     "},
		 {"MODIFICATION ON A/C(TYPE)     "},
		 {"MODIFICATION ON D.O.B         "},
		 {" GO TO PREVIOUS MENU          "}
		 };
gotoxy(20,3);
textcolor(RED);
cprintf("****************************************");
gotoxy(20,5);
cprintf("|   FULLY ACAUNT HOLDER MODIFICATION   |");
gotoxy(20,7);
cprintf("****************************************");
textcolor(RED+BLINK);
textbackground(YELLOW);
gotoxy(25,23);
cprintf("PERSS ENTER FOR SELECT MENU");
textcolor(WHITE+BLINK);
textbackground(RED);
gotoxy(5,1);
cprintf("TODAY DATE");
textcolor(WHITE+BLINK);
textbackground(RED);
gotoxy(66,1);
cprintf("CURRENT TIME");

textcolor(RED);
textbackground(WHITE);
gotoxy(5,3);
cprintf("%s",__DATE__);
textcolor(RED);
textbackground(WHITE);
gotoxy(67,3);
cprintf("%s",__TIME__);

textbackground(CYAN);
for(i=0;i<7;i++)
{
p=10;
gotoxy(30,p+i);
textcolor(BLACK);
cprintf("\n%s",menu[i]);
}
i=7;
do
{
if(i==7)
{
i--;
textbackground(BLUE);
textcolor(RED);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
}
key=getch();
if(key==72&&i>=1)
{
textbackground(CYAN);
textcolor(WHITE);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
i--;
textbackground(BLUE);
textcolor(RED);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
}
if(key==80&&i<=5)
{
textbackground(CYAN);
textcolor(BLACK);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
i++;
textbackground(WHITE);
textcolor(BLACK);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
}
if(key==13&&i==6)
{
textbackground(CYAN);
holder();
}
if(key==13&&i==5)
{
textbackground(CYAN);
ho_modidob();
getch();
clrscr();
ho_modify();
}
textbackground(CYAN);
if(key==13&&i==4)
{
textbackground(CYAN);
ho_modiactype();
getch();
clrscr();
ho_modify();
}
if(key==13&&i==3)
{
textbackground(CYAN);
ho_modimobile();
getch();
clrscr();
ho_modify();
}
if(key==13&&i==2)
{
textbackground(CYAN);
ho_modifname();
getch();
clrscr();
ho_modify();
}
if(key==13&&i==1)
{
textbackground(CYAN);
ho_modiaddress();
getch();
clrscr();
ho_modify();
}
if(key==13&&i==0)
{
textbackground(CYAN);
ho_modiname();
getch();
clrscr();
ho_modify();
}
}while(key!=27);
}
void ho_modiname()
{
clrscr();
 int k=0,i;
 long tmpname;
 char na[20];
 gotoxy(15,1);
 printf("<<***MODIFICATION ON NAME***>>");
 gotoxy(3,4);
 printf("ENTER ACCAUNT NO FOR MODIFY :-");
 textcolor(GREEN);
gotoxy(35,3);
cprintf("%c",TLC);
gotoxy(65,3);
cprintf("%c",TRC);
gotoxy(35,5);
cprintf("%c",BLC);
gotoxy(65,5);
cprintf("%c",BRC);
for(i=36;i<=64;i++)
{
gotoxy(i,3);
cprintf("%c",HRL);
gotoxy(i,5);
cprintf("%c",HRL);
}
gotoxy(35,4);
cprintf("%c",VRL);
gotoxy(65,4);
cprintf("%c",VRL);
gotoxy(37,4);
scanf("%ld",&tmpname);
 fp=fopen("holder.txt","rb+");

while(fread(&s,sizeof(s),1,fp)==1)
{
if(tmpname==s.ho_acno)
{
gotoxy(8,7);
printf("ENTER NEW NAME:->");
gotoxy(35,6);
cprintf("%c",TLC);
gotoxy(65,6);
cprintf("%c",TRC);
gotoxy(35,8);
cprintf("%c",BLC);
gotoxy(65,8);
cprintf("%c",BRC);
for(i=36;i<=64;i++)
{
gotoxy(i,6);
cprintf("%c",HRL);
gotoxy(i,8);
cprintf("%c",HRL);
}
gotoxy(35,7);
cprintf("%c",VRL);
gotoxy(65,7);
cprintf("%c",VRL);
gotoxy(37,7);
fflush(stdin);
gets(s.ho_name);
strcpy(na,s.ho_name);
fseek(fp,-si,1);
fwrite(&s,sizeof(s),1,fp);
k=1;
break;
}
}
if(k==0)
{
gotoxy(25,20);
cprintf("%d ACCAUNT NUMBER NOT FOUND\n",tmpname);
}
else{
gotoxy(25,20);
cprintf("%s SUCCESSFILLY MODIYFYED\n",na);
}
fclose(fp);
}
