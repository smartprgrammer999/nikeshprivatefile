cprintf("%c",TLC);
gotoxy(60,8);
cprintf("%c",TRC);
gotoxy(20,18);
cprintf("%c",BLC);
gotoxy(60,18);
cprintf("%c",BRC);
for(i=21;i<=59;i++)
{
gotoxy(i,8);
cprintf("%c",HRL);
gotoxy(i,18);
cprintf("%c",HRL);
gotoxy(i,10);
cprintf("%c",HRL);
}
for(i=9;i<18;i++)
{
gotoxy(20,i);
