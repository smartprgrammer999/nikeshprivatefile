cprintf("HO-A/C(TYPE)");
gotoxy(45,10);
cprintf("HO-IFSE");
gotoxy(58,10);
cprintf("AVELBLE-BAL");
gotoxy(70,10);
cprintf("HO-o/p date");

p=1;
}
while(fread(&s,sizeof(s),1,fp)==1)
if(strcmpi(tmpname,s.ho_name)==0)
{
textcolor(YELLOW);
