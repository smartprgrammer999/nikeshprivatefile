gotoxy(30,4);
cprintf("HO-ADDRESS");
gotoxy(45,4);
cprintf("HO-ADDHAR");
gotoxy(58,4);
cprintf("HO-phone.no");
gotoxy(70,4);
cprintf("HO-D.O.B");
gotoxy(1,10);
cprintf("HO-A/C-no");
gotoxy(15,10);
cprintf("HO-BRANCH");
gotoxy(30,10);
cprintf("HO-A/C(TYPE)");
gotoxy(45,10);
cprintf("HO-IFSE");
gotoxy(58,10);
cprintf("AVELABLE-BAL");
gotoxy(70,10);
cprintf("HO-o/p date");

p=1;
}
while(fread(&s,sizeof(s),1,fp)==1)
if(strcmpi(tmpdob,s.ho_dob)==0)
{
textcolor(YELLOW);
gotoxy(1,y);
printf("%s",s.ho_name);
gotoxy(15,y);
printf("%s",s.ho_frname);
gotoxy(30,y);
printf("%s",s.ho_address);
gotoxy(45,y);
printf("%s",s.ho_addhar);
gotoxy(58,y);
printf("%s",s.ho_phone);
gotoxy(70,y);
printf("%s",s.ho_dob);
p1=1;
y++;
gotoxy(1,x);
printf("%ld",s.ho_acno);
gotoxy(15,x);
printf("%s",s.ho_branch);
gotoxy(30,x);
printf("%s",s.ho_actype);
gotoxy(45,x);
printf("%s",s.ho_ifsc);
gotoxy(58,x);
printf("%ld",s.ho_fdepo);
gotoxy(70,x);
printf("%s",s.ho_date);
x++;
}
if(p1==0)
{
gotoxy(25,20);
cprintf("D.O.B not found\n");
}
else{
gotoxy(25,20);
y=y-7;
cprintf("%d DATA PRESENT IN HE FILE\n",y);
}
fclose(fp);
}
