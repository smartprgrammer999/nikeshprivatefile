void holder()
{
clrscr();
int p,i,key=9;
char menu[9][30]={
		 {"INSERT HOLDER NEW RECORD     "},
		 {"DISPLAY HOLDER DETAIL        "},
		 {"CLOSED HOLDER ACCAUNT        "},
		 {"SEARCH HOLDER MENU DETAIL    "},
		 {"MODIFY HOLDER MENU           "},
		 {"SORTING HOLDER NAME          "},
