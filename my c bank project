if(strcmpi(p.name,name)==0)
n1=1;
gotoxy(41,16);
cscanf("%s",pass);
if(strcmpi(p.pass,pass)==0)
p1=1;
//------------------
fclose(fps);
if(n1==1&&p1==1)
return p1;
getch();
}
void loding2()
{
int gd=DETECT,gm,x=160,y=250,i;
initgraph(&gd,&gm,"\\tc\\bgi");
setcolor(YELLOW);
outtextxy(230,220,"LOADING...");
for(i=x;i<350;i++)
{
setcolor(RED);
circle(i,y,10);
setfillstyle(1,4);
floodfill(i,y,RED);
delay(15);
}
closegraph();
}
void recetemp()
{
fp=fopen("bank_employ.txt","rb");
ftemp=fopen("golder.txt","wb");
fclose(fp);
fclose(ftemp);
remove("bank_employ.txt");
rename("golder.txt","bank_employ.txt");
}
void recet_ho()
{
fp=fopen("holder.txt","rb");
ftemp=fopen("golder.txt","wb");
fclose(fp);
fclose(ftemp);
remove("holder.txt");
rename("golder.txt","holder.txt");
}
void widra()
{
clrscr();
int ad=0,ac=0,n=0,b=0,p=0,cheek=0;
long acno,wed;
char name[30],addhar[20],branch[15],phone[15];
//fp=fopen("holder.txt","ab+");
gotoxy(30,2);
fflush(stdin);
printf("WELCOME TO WIDRAWEL MONEY");
printf("\nEnter accaunt no:-");
scanf("%ld",&acno);
fflush(stdin);
printf("\nEnter name no:-");
gets(name);
printf("\nEnter branch no:-");
gets(branch);
printf("\nEnter addhar no:-");
gets(addhar);
printf("\nEnter phone no:-");
scanf("%s",phone);
fp=fopen("holder.txt","ab+");
while(fread(&s,sizeof(s),1,fp)==1)
if(acno==s.ho_acno)
{ac=1;}
if(strcmpi(name,s.ho_name)==0)
{n=1;}
if(strcmpi(branch,s.ho_branch)==0)
{b=1;}
if(strcmpi(addhar,s.ho_addhar)==0)
{ad=1;}
if(strcmpi(phone,s.ho_phone)==0)
{p=1;}
if(n==1&&ac==1&&b==1&&ad==1&&p==1)
{
gotoxy(1,10);
cprintf("HO-NAME");
gotoxy(15,10);
cprintf("HO-FR.NAME");
gotoxy(30,10);
cprintf("HO-ADDRESS");
gotoxy(45,10);
cprintf("HO-ADDHAR");
gotoxy(58,10);
cprintf("HO-phone.no");
gotoxy(70,10);
cprintf("HO-D.O.B");
gotoxy(1,14);
cprintf("HO-A/C-no");
gotoxy(15,14);
cprintf("HO-BRANCH");
gotoxy(30,14);
cprintf("HO-A/C(TYPE)");
gotoxy(45,14);
cprintf("HO-IFSE");
gotoxy(58,14);
cprintf("AVELBLE-BAL");
gotoxy(70,14);
cprintf("HO-o/p date");
 textcolor(YELLOW);
gotoxy(1,11);
printf("%s",s.ho_name);
gotoxy(15,11);
printf("%s",s.ho_frname);
gotoxy(30,11);
printf("%s",s.ho_address);
gotoxy(45,11);
printf("%s",s.ho_addhar);
gotoxy(58,11);
printf("%s",s.ho_phone);
gotoxy(70,11);
printf("%s",s.ho_dob);
gotoxy(1,15);
printf("%ld",s.ho_acno);
gotoxy(15,15);
printf("%s",s.ho_branch);
gotoxy(30,15);
printf("%s",s.ho_actype);
gotoxy(45,15);
printf("%s",s.ho_ifsc);
gotoxy(58,15);
printf("%ld",s.ho_fdepo);
gotoxy(70,15);
printf("%s",s.ho_date);
cheek=1;
 }
if(cheek==0)
{
gotoxy(10,12);
cprintf("inputed holder data does not match plese cheek the data");
}
else
{
gotoxy(8,17);
cprintf("enter amount has to be wedrawel:-");
cscanf("%ld",&wed);
if(s.ho_fdepo<wed)
printf("\nholder has not sufficient balance try agayn latter");
else
{
s.ho_fdepo=s.ho_fdepo-wed;
fwrite(&s,sizeof(s),1,fp);
printf("\nwidrawel has successfully");
}
}
fclose(fp);
getch();
}

