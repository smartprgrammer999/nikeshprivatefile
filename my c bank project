void empmodi()
{
clrscr();
int p,i,key=9;
char menu[8][31]={
		 {"MODIFICATION ON NAME          "},
		 {"MODIFICATION ON ADDRESS       "},
		 {"MODIFICATION ON FATHER'S NAME "},
		 {"MODIFICATION ON MOBILE-NO     "},
		 {"MODIFICATION ON POST          "},
		 {"MODIFICATION ON D.O.B         "},
		 {"MODIFICATION ON SALARY        "},
		 {" GO TO PREVIOUS MENU          "}
		 };
gotoxy(20,3);
textcolor(RED);
cprintf("****************************************");
gotoxy(20,5);
cprintf("|   FULLY ACAUNT HOLDER MODIFICATION   |");
gotoxy(20,7);
cprintf("****************************************");
textcolor(RED+BLINK);
textbackground(YELLOW);
gotoxy(25,23);
cprintf("PERSS ENTER FOR SELECT MENU");
textcolor(WHITE+BLINK);
textbackground(RED);
gotoxy(5,1);
cprintf("TODAY DATE");
textcolor(WHITE+BLINK);
textbackground(RED);
gotoxy(66,1);
cprintf("CURRENT TIME");

textcolor(RED);
textbackground(WHITE);
gotoxy(5,3);
cprintf("%s",__DATE__);
textcolor(RED);
textbackground(WHITE);
gotoxy(67,3);
cprintf("%s",__TIME__);

textbackground(CYAN);
for(i=0;i<8;i++)
{
p=10;
gotoxy(30,p+i);
textcolor(BLACK);
cprintf("\n%s",menu[i]);
}
i=8;
do
{
if(i==8)
{
i--;
textbackground(BLUE);
textcolor(RED);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
}
key=getch();
if(key==72&&i>=1)
{
textbackground(CYAN);
textcolor(WHITE);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
i--;
textbackground(BLUE);
textcolor(RED);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
}
if(key==80&&i<=6)
{
textbackground(CYAN);
textcolor(BLACK);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
i++;
textbackground(WHITE);
textcolor(BLACK);
gotoxy(30,p+i);
cprintf("\n%s",menu[i]);
}
if(key==13&&i==7)
{
employ();
}
if(key==13&&i==6)
{
//empmodi_salary();
getch();
empmodi();
}
if(key==13&&i==5)
{
empmodi_dob();
getch();
empmodi();
}
if(key==13&&i==4)
{
empmodi_post();
getch();
empmodi();
}
if(key==13&&i==3)
{
empmodi_mob();
getch();
empmodi();
}
if(key==13&&i==2)
{
empmodi_fname();
getch();
empmodi();
}
if(key==13&&i==1)
{
empmodi_address();
getch();
empmodi();
}
if(key==13&&i==0)
{
empmodi_name();
getch();
empmodi();
}
}while(key!=27);
}
void empmodi_name()
{
clrscr();
 int k=0,i;
 char tmpname[25];
 char na[20];
 gotoxy(15,1);
 printf("<<***MODIFICATION ON NAME***>>");
 gotoxy(3,4);
 printf("ENTER ADDHAR NO FOR MODIFY :-");
 textcolor(GREEN);
gotoxy(35,3);
cprintf("%c",TLC);
gotoxy(65,3);
cprintf("%c",TRC);
gotoxy(35,5);
cprintf("%c",BLC);
gotoxy(65,5);
cprintf("%c",BRC);
for(i=36;i<=64;i++)
{
gotoxy(i,3);
cprintf("%c",HRL);
gotoxy(i,5);
cprintf("%c",HRL);
}
gotoxy(35,4);
cprintf("%c",VRL);
gotoxy(65,4);
cprintf("%c",VRL);
gotoxy(37,4);
scanf("%s",tmpname);
 fb=fopen("bank_employ.txt","rb+");

while(fread(&b,sizeof(b),1,fb)==1)
{
if(strcmpi(tmpname,b.employ_addhar)==0)
{
gotoxy(8,7);
printf("ENTER NEW NAME:->");
gotoxy(35,6);
cprintf("%c",TLC);
gotoxy(65,6);
cprintf("%c",TRC);
gotoxy(35,8);
cprintf("%c",BLC);
gotoxy(65,8);
cprintf("%c",BRC);
for(i=36;i<=64;i++)
{
gotoxy(i,6);
cprintf("%c",HRL);
gotoxy(i,8);
cprintf("%c",HRL);
}
gotoxy(35,7);
cprintf("%c",VRL);
gotoxy(65,7);
cprintf("%c",VRL);
gotoxy(37,7);
fflush(stdin);
gets(b.employ_name);
strcpy(na,s.ho_name);
fseek(fb,-bi,1);
fwrite(&b,sizeof(b),1,fb);
k=1;
break;
}
}
if(k==0)
{
gotoxy(25,20);
cprintf("%s ADDHAR NUMBER NOT FOUND\n",tmpname);
}
else{
gotoxy(25,20);
cprintf("%s SUCCESSFILLY MODIYFYED\n",na);
}
fclose(fb);
}
