void ho_display()
{
int i=5;
clrscr();
fp=fopen("holder.txt","rb");
gotoxy(1,3);
cprintf("HO-NAME");
gotoxy(15,3);
cprintf("HO-FR.NAME");
gotoxy(30,3);
cprintf("HO-ADDRESS");
gotoxy(45,3);
cprintf("HO-ADDHAR");
gotoxy(58,3);
cprintf("HO-phone.no");
gotoxy(70,3);

cprintf("HO-date");
printf("\n------------------------------------------------------------------------------\n");
while(fread(&s,sizeof(s),1,fp)==1)
{
gotoxy(1,i);
printf("%s",s.ho_name);
gotoxy(15,i);
printf("%s",s.ho_frname);
gotoxy(30,i);
printf("%s",s.ho_address);
gotoxy(45,i);
printf("%s",s.ho_addhar);
gotoxy(58,i);
printf("%s",s.ho_phone);
gotoxy(70,i);
printf("%s",s.ho_date);
i++;
}
printf("\n--------------------------------------------------------------------------------\n");
printf("\n");
fclose(fp);
}
void ho_del()
{
clrscr();
int f=0;
long no;
char name1[20];
fp=fopen("holder.txt","rb");
printf("ENTER ACCAUNT NO FOR DELETION :-");
scanf("%ld",&no);
ftemp=fopen("pholder.txt","wb");
while(fread(&s,sizeof(s),1,fp)==1)
{
if(s.ho_acno!=no)
fwrite(&s,sizeof(s),1,ftemp);
else
{
strcpy(name1,s.ho_name);
f=1;
}
}
fclose(fp);
fclose(ftemp);
remove("holder.txt");
rename("pholder.txt","holder.txt");
if(f==0)
printf("%ld A/C N0 HAS NOT EXIST ON THE BANK",no);
else
printf("%s A/C NO:-%ld HAS CLOSED HIS ACCAUNT",name1,no);

}
